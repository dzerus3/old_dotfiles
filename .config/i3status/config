general {
        colors = true
        interval = 5
}

order += "ethernet enp0s31f6"
order += "wireless wlan0"
order += "battery 0"
order += "tztime local"

ethernet enp0s31f6 {
        format_up = "E"
        format_down = ""
}

wireless wlan0 {
        format_up = "W: (%quality at %essid, %bitrate)"
        format_down = ""
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = ""
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%m-%d %H:%M"
        # hide_if_equals_localtime = true
}
